<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prj.Culture.board.dao.BoardMapper">

	<resultMap type="com.prj.Culture.board.dto.BoardDTO" id="BoardResultMap">
		<result property="seq" column="seq" />
	    <result property="writer" column="writer" />
	    <result property="title" column="title" />
	    <result property="content" column="content" />
	    <result property="pwd" column="pwd" />
	    <result property="hit" column="hit" />
	    <result property="regdate" column="regdate" />
	    <result property="filename" column="filename" />
	</resultMap>
	
	<select id="getList" resultMap="BoardResultMap" parameterType="map">
		SELECT
            seq,
            writer,
            title,
            content,
            pwd,
            hit,
            regdate,
            filename
        FROM (
            SELECT
                a.*,
                rownum rnum
            FROM (
                SELECT
                    *
                FROM boardtest
        <where>
            <if test ="keyWord != '' and keyField =='title'">
                title like '%' ||#{keyWord}||'%'
            </if>
            <if test ="keyWord != '' and keyField =='writer'">
                writer like '%' ||#{keyWord}||'%'
            </if>
            <if test ="keyWord != '' and keyField =='content'">
                content like '%' ||#{keyWord}||'%'
            </if>
            <if test ="keyWord != '' and keyField =='all'">
                content like '%' ||#{keyWord}||'%' or
                title like '%' ||#{keyWord}||'%' or
                writer like '%' ||#{keyWord}||'%'
            </if>
        </where>
                ORDER BY seq desc)a)
        <![CDATA[
        WHERE rnum >=#{start} AND rnum <= #{end}   
        ]]>            
	</select>
	
	<select id="getRowCount" parameterType="map" resultType="Integer">
        SELECT
            count(*)
        FROM boardtest
        <where>
            <if test ="keyWord != '' and keyField =='title'">
                title like '%' ||#{keyWord}||'%'
            </if>
            <if test ="keyWord != '' and keyField =='writer'">
                writer like '%' ||#{keyWord}||'%'
            </if>
            <if test ="keyWord != '' and keyField =='content'">
                content like '%' ||#{keyWord}||'%'
            </if>
            <if test ="keyWord != '' and keyField =='all'">
                content like '%' ||#{keyWord}||'%' or
                title like '%' ||#{keyWord}||'%' or
                writer like '%' ||#{keyWord}||'%'
            </if>
        </where>
    </select>
	
	<insert id="insertBoard">
        INSERT INTO boardtest(
            seq,
            writer,
            title,
            content,
            pwd,
            hit,
            regdate,
            filename)
        VALUES (
            boardtest_seq.nextval,
            #{writer},
            #{title},
            #{content},
            #{pwd},
            0,
            sysdate,
            #{filename,jdbcType=VARCHAR}
        )
    </insert>
    
    <select id="viewBoard" parameterType="Integer" resultMap="BoardResultMap">
        SELECT
            seq,
            writer
            title,
            content,
            pwd,
            hit,
            regdate,
            filename
        FROM boardtest
        WHERE seq = #{seq}
    </select>
    
    <update id="updateHit" parameterType="Integer">
        UPDATE boardtest
        SET
          hit = hit+1
        WHERE seq =#{seq}      
    </update>
    
    <update id="editBoard">
        UPDATE boardtest
        SET
         title=#{title},
         content=#{content},
         filename=#{filename,jdbcType=VARCHAR}
        WHERE seq =#{seq} 
    </update>
    
    <delete id="deleteBoard">
        DELETE
        FROM boardtest
        WHERE seq =#{seq}
    </delete>
    
        
	

</mapper>